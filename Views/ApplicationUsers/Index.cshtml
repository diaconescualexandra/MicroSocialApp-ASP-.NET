@model proiectasp.Models.ApplicationUser

@if (TempData["message"] != null)
{
    <h2 class="alert @ViewBag.Alert p-3 rounded-3 text-center mb-5">@ViewBag.Message</h2>
}

<h2>Afisare utilizatori</h2>
<br />
<div class="d-flex flex-column">
    @foreach (var user in ViewBag.Users)
    {
        <div class="card text-dark p-1">
            <p>@user.UserName</p>
            <p>@user.Signature</p>
            <br />

            <div class="d-flex flex-row space-between">
                <a class="link-dark" href="/ApplicationUsers/Show/@user.Id"> <i class="bi bi-file-earmark-person-fill"></i> Afisare user </a>
                <br />
                <a class="link-dark" href="/ApplicationUsers/Edit/@user.Id"> <i class="bi bi-pencil-fill"></i> Editare user </a>
            </div>
        </div>
        <hr />
    }
</div>
<br />
<div class="">
    <nav aria-label="Page navigation example">
        <ul class="pagination">
            <li class="page-item">
                <a class="page-link"
                   href="/ApplicationUsers/Index?page=1" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
            @for (int i = 1; i <= ViewBag.lastPage; i++)
            {
                <li class="page-item">
                    <a class="page-link"
                       href="/ApplicationUsers/Index?page=@i">@(i)</a>
                </li>
            }

            <li class="page-item">
                <a class="page-link"
                   href="/ApplicationUsers/Index?page=@(ViewBag.lastPage)" arialabel="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
</div>
<a href="/Users/New">Adaugare user</a>