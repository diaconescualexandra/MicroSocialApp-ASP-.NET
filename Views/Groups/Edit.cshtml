@model proiectasp.Models.Group
<h2 class="text-center mt-5"> Editeaza grup</h2>

<br />

<div class="container mt-5">
    <div class="row">
        <div class="col-6 offset-3">
            @using (Html.BeginForm(actionName: "Edit", controllerName: "Groups",
            method: FormMethod.Post,
            routeValues: new { id = Model.GroupId }))
            {
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                @Html.Label("GroupName", "Denumire Grup")
                <br />

                @Html.TextBox("GroupName", null, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.GroupName, "", new { @class = "text-danger" })
                <br />

                <br />

                @Html.Label("GroupDescription", "Descriere Grup")

                @Html.TextBox("GroupDescription", null, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.GroupName, "", new { @class = "text-danger" })

                <br />

                <br />

                @Html.Label("GroupJoinMethod", "Metoda de alaturare in grup")
                <br />

                <br />

                @Html.DropDownListFor(m => m.GroupJoinMethod,
                         new SelectList(Model.JoinMet, "Value", "Text"),
                         "Vizibilitate:", new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.GroupJoinMethod, null, new { @class = "text-danger" })
                <br />

                <button class="btn btn-warning" type="submit">Editeaza grup</button>
            }

        </div>
    </div>
</div>
