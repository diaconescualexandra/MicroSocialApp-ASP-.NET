@model proiectasp.Models.Post

<h2 class="text-center mt-5">Editare postare</h2>
<br />
<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-3">
            @using (Html.BeginForm(actionName: "Edit", controllerName: "Posts",
            method: FormMethod.Post,
            routeValues: new { id = Model.PostId }))
            {
                /* @Html.HiddenFor(m => m.Id)  */


                @Html.Label("Continut", "Continut Postare")
                <br />
                @Html.EditorFor(m => m.PostContent, new { htmlAttributes = new { @class = "form-control" } })

                @Html.ValidationMessageFor(m => m.PostContent, null, new { @class = "text-danger" })
                <br />

                <br />

                @Html.Label("Caption", "Caption Postare")
                <br />
                @Html.EditorFor(m => m.PostCaption, new { htmlAttributes = new { @class = "form-control" } })

                @Html.ValidationMessageFor(m => m.PostCaption, null, new { @class = "text-danger" })

                <br />

                @Html.Label("Image", "Imagine Postare")
                <br />
                <input type="file" name="Image" accept="image/*" />
                @Html.ValidationMessageFor(m => m.Image, null, new { @class = "text-danger" })

                <button class="btn btn-warning" type="submit">Modifica postare</button>

            }
        </div>
    </div>
</div>




