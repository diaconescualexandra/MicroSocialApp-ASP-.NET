<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - proiectasp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/proiectaspasp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-light border-bottom box-shadow">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">proiectasp</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-2">
                        <li class="nav-item d-flex align-items-center nav-link link-dark">

                            <i class="bi bi-clipboard-heart-fill"></i>
                            <a class="nav-link" asp-area="" asp-controller="Posts" asp-action="Index">Postari</a>

                        </li>
                        <li class="nav-item d-flex align-items-center nav-link link-dark">

                            <i class="bi bi-person-bounding-box"></i>
                            <a class="nav-link " asp-area="" asp-controller="Groups" asp-action="Index">Grupuri</a>

                        </li>
                        <li class="nav-item d-flex align-items-center nav-link link-dark">

                            <i class="bi bi-person-lines-fill"></i>
                            <a class="nav-link" asp-area="" asp-controller="ApplicationUsers" asp-action="Index">Utilizatori</a>

                        </li>
                        <li class="nav-item d-flex align-items-center nav-link link-dark">

                            <i class="bi bi-pen-fill"></i>
                            <a class="nav-link" asp-area="" asp-controller="Posts" asp-action="New">Postare noua</a>

                        </li>
                        <li class="nav-item d-flex align-items-center nav-link link-dark">

                            <i class="bi bi-people-fill"></i>
                            <a class="nav-link" asp-area="" asp-controller="Groups" asp-action="New">Grup nou</a>

                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid bg-light text-dark" height="100vh">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer bg-light">
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
